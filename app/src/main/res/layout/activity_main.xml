<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30sp"
    tools:context=".MainActivity"
    android:background="@color/black"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/firstLayout">

        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_width="110sp"
            android:layout_height="wrap_content"
            android:id="@+id/xValue"
            />

        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_width="110sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/yValue"
            />

        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_width="110sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/zValue"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/secondLayout"
        android:layout_below="@+id/firstLayout"
        android:layout_marginTop="10sp">

        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_width="110sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/xGyroValue"
            />

        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_width="110sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/yGyroValue"
            />

        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_width="110sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/zGyroValue"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/thirdLayout"
        android:layout_below="@+id/secondLayout"
        android:layout_marginTop="10sp">

        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_width="110sp"
            android:layout_height="wrap_content"
            android:id="@+id/xMagnoValue"
            />

        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_width="110sp"
            android:layout_height="wrap_content"
            android:id="@+id/yMagnoValue"
            />

        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_width="110sp"
            android:layout_height="wrap_content"
            android:id="@+id/zMagnoValue"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        android:id="@+id/fourthLayout"
        android:layout_below="@id/thirdLayout">

        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/light"
            />

        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:id="@+id/pressure"
            />

        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:id="@+id/temp"
            />
        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:id="@+id/humi"
            />
        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:id="@+id/proxi"
            />
        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:id="@+id/hr"
        />
        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="-------End of the List-------"
            android:textAlignment="center"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accelerometer"
            android:id="@+id/button1"
            android:onClick="onPress"/>
    </LinearLayout>
</RelativeLayout>